<p id="notice"><%= notice %></p>

<h1>Items</h1>


<table>
  <tr>
    <td>
      <% @items.each do |item| %>
        <div class="item-box">
          <%= link_to item do %>
            <%= attachment_image_tag @item, :image, :fill, 100, 200,fallback: "no_images.png", size:'200x200' %><br>
            <br>
            <%= item.name %>
          <% end %>
        </div>
      <% end %>
    </td>
  </tr>
</table>
