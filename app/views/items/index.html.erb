<p id="notice"><%= notice %></p>
<% if current_end_user.try(:admin?) %>
      <div class="page-header">
        <h1>管理者マイページ</h1>
      </div>
      <p class="admin_btn col-xs-offset-1 col-xs-10 col-xs-offset-1"><%= link_to "管理画面", "/admin" %></p>
    <% else %>
      <div class="page-header">
        <h1>マイページ<br>
          <small><%= current_end_user.name %>さん、こんにちは！</small>
        </h1>
      </div>
    <% end %>
<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Release date</th>
      <th>監督名</th>
      <th>出演者名</th>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name,item %></td>
        <td><%= item.release_date %></td>
        <td><%= raw(item.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')) %></td>
        <td><%= raw(item.actor_list.map { |t| link_to t, tag_path(t) }.join(', ')) %></td>
        <td><%= raw(item.genre_list.map { |t| link_to t, tag_path(t) }.join(', ')) %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Item', new_item_path %>
