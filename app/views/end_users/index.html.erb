<div class="back-color">
	<tr>
	 	<td>
	 		<h2>マイレビュー</h2>
	 	</td>
   			<td width="40%">
				<% @comments.each do |t| %>
					<tr>
						<td>
							<div class="item-review">
								<%= link_to item_path(t.item) do %>
									<%= attachment_image_tag t.item, :image, :fill, 500, 500,fallback: "no_images.png", size:'200x230'%><br>
									<h3><%= t.item.name %></h3>
								<% end %>
							</div>
						</td>
						<td>
							<div class="item-body">
								<%= t.body %>
								<br>
								<br>
								<span style="background-color:#DDDDDD"><%= link_to '▶︎レビューページへ', item_review_path(t.item,t)  %></span>
							</div>
						</td>
					</tr>
				<% end %>
			</td>
		 </td>
 	</tr>
</div>