<ul class="media-list">

  <% events.each do |event| %>

    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(event.end_user, { size: 50 }) %>" alt="">
      </div>

      <div class="media-body">
        <div>
          <%= link_to event.end_user.name, end_user_path(event.end_user) %> <span class="text-muted">posted at <%= event.created_at %></span>
        </div>

        <div>
          <p><%= event.content %></p>
        </div>

        <div>
           <%= link_to "Delete", event, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
        </div>

        <div>
          <%= render 'entries/like_button', event: event %>
        </div>
      </div>
    </li>
  <% end %>

  <%= paginate events %>

</ul>
